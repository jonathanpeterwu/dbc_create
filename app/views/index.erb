
<div class="header">
	<h2>Discover amazing projects made by DBC grads</h2>
	<h3 style="text-align: center; position:relative"> Meet <a class="nav-link" style="color: black;"  href="/projects/22">Tattle</a> Made @ DBC</h3>
	<div class="home-image">
	<iframe width="853" height="480" src="//www.youtube.com/embed/TSsuIiJH_hk" frameborder="0" allowfullscreen></iframe>
	</div>

	<div class="sorting-div">
	  <p>Sort By <p>
 		<button class="sort-button"><a href="/projects?sort=chicago" name="sort[location][chicago]">Chicago</a></button>
		<button class="sort-button"><a href="/projects?sort=sanfrancisco" name="sort[location][sanfrancisco]">San Francisco</a></button>
		<button class="sort-button"><a href="/projects?sort=newyork" name="sort[location][newyork]">New York</a></button>
	</div>
</div>

<div class="container">
	<% @projects.each do |project| %>
				<% @side="even" %>
		<div class="project-wrap <%= @side %>" id="project_<%= project.id %>" >
			<a href="/projects/<%= project.id %>"><img class="image" src="<%= project.image_url %>" alt="<%= project.name %>"/></a>
			<div class="project-content" >
				<div class="project" id="<%= project.id %>">
					<a class="link" href="/projects/<%= project.id %>"><div class="project-title"><%= project.name %></div></a>
			</div>
			</div>
		</div>
	<% end %>
</div>