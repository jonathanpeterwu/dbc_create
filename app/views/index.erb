
<div class="project-header">
	<h2>Discover amazing projects made by DBC grads</h2>
	<div class="searching-div">
		<form class="dbc-form" action="projects" method="get">
			<input type="search" name="pgsearch" placeholder="Search Projects">
			<button class="dbc-button sort-button inline" id="submit-search" class="pure-button">Search</button>
		</form>
	</div>

		<% @number = (1..6).to_a.sample %>
		<% if @number == 1 %>
		<h3 style="text-align: center; position:relative"> Meet <a class="nav-link" style="color: black;"  href="/projects/22">Tattle</a> Made @ DBC</h3>
		<div class="home-image">
				<iframe width="853" height="480" src="//www.youtube.com/embed/TSsuIiJH_hk" frameborder="0" allowfullscreen></iframe>
		</div>
		<% elsif  @number == 2 %>
		<h3 style="text-align: center; position:relative"> Meet <strong class="black">For The Cause</strong> Made @ DBC</h3>
		<div class="home-image">
			<iframe width="853" height="480" src="//www.youtube.com/embed/avT7ZAONS_8" frameborder="0" allowfullscreen></iframe>
		</div>
		<% elsif  @number == 3 %>
		<h3 style="text-align: center; position:relative"> Meet <strong class="black">The Delta</strong> Made @ DBC</h3>
		<div class="home-image">
			<iframe width="853" height="480" src="//www.youtube.com/embed/7FoN4XEiyno" frameborder="0" allowfullscreen></iframe>
		</div>
		<% elsif  @number == 4 %>
		<h3 style="text-align: center; position:relative"> Meet <strong class="black">HalfCourt Press</strong> Made @ DBC</h3>
		<div class="home-image">
			<iframe width="853" height="480" src="//www.youtube.com/embed/k0GjJZTbFYg" frameborder="0" allowfullscreen></iframe>
		</div>
		<% elsif  @number == 5 %>
		<h3 style="text-align: center; position:relative"> Meet <strong class="black">Encore</strong> Made @ DBC</h3>
		<div class="home-image">
			<iframe width="853" height="480" src="//www.youtube.com/embed/3A_aR2-7bDU" frameborder="0" allowfullscreen></iframe>
		</div>
		<% elsif  @number == 6 %>
		<h3 style="text-align: center; position:relative"> Meet <strong class="black">Zombify</strong> Made @ DBC</h3>
		<div class="home-image">
			<iframe width="853" height="480" src="//www.youtube.com/embed/A3pyUYPYMHY" frameborder="0" allowfullscreen></iframe>
		</div>
		<% end %>


	<div class="sorting-div">
		<form class="dbc-form" action="projects" method="get">
			<button class="dbc-button sort-button inline" type="submit" name="sort[location]" value="San Francisco">San Francisco</button>
			<button class="dbc-button sort-button inline" type="submit" name="sort[location]" value="Chicago">Chicago</button>
			<button class="dbc-button sort-button inline" type="submit" name="sort[location]" value="New York">New York</button>
		</form>
	</div>

</div>

<div class="project-container">
	<% @projects.each do |project| %>
	<div class="col md-col-4 mb2 mt2 px1" id="project_<%= project.id %>">
		<div class="p2 bg-white border project-box" style="height: 325px;">
			<a href="/projects/<%= project.id %>" class="project-image"><img class="mb2 project-image" src="<%= project.image_url %>" alt="<%= project.name %>"/></a>
			<a class="link" href="/projects/<%= project.id %>"><h1 class="h4 mt0 center"><%= project.name %></h1></a>
			<form action="/vote/<%= project.id %>" class="center" method="POST">
				<button class="col-10 button-blue  mt1 mb1 center">
					Vote <% if project.vote > 0  %> (<%= project.vote %>) <% end %>
				</button>
			</form>
		</div>
	</div>
	<% end %>
</div>