		<form class="dbc-form" action="projects" method="get">
			<input type="search" name="pgsearch" placeholder="Full text search">
			<button class="dbc-button dbc-button-primary inline" id="submit-search" class="pure-button">Search</button>
		</form>
	</div>
</div>

<div class="container">
	<% @projects.each do |project| %>
				<% @side="even" %>
		<div class="project-wrap <%= @side %>" id="project_<%= project.id %>" >
			<a href="/projects/<%= project.id %>"><img class="image" src="<%= project.image_url %>" alt="<%= project.name %>"/></a>
			<div class="project-content" >
				<div class="project" id="<%= project.id %>">
					<a class="link" href="/projects/<%= project.id %>"><div class="project-title"><%= project.name %></div></a>
			</div>
			</div>
		</div>
	<% end %>
</div>