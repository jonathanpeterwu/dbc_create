
<div class="header">
	<h1>Discover amazing projects made by DBC grads</h1>
	<div class="home-image">
	</div>
</div>

<div class="container">
<% @projects.each do |project| %>
		<% if project.id % 2 == 0 %>
			<% @side="even" %>
		<% else %>
			<% @side="odd" %>
		<% end %>

	<div class="project-wrap <%= @side %>" id="project_<%= project.id %>">
		<img class="image" src="http://i.imgur.com/LAnbqxG.png" alt="<%= project.name %>"/>
		<div class="project-content">
			<div class="project" id="<%= project.id %>">
				<div class="project-name">Project </div><div class="project-title"><%= project.name %></div>
		</div>
		</div>
	</div>
<% end %>
</div>